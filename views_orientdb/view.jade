doctype html

html
  head
    meta(charset='utf-8')
  body
    h1 
      a(href='/topic') Server Side Javascript
    ul
      each val in topics
        li
          - rid = encodeURIComponent(val['@rid']);
          a(href='/topic/' + rid)= val.title
    
    artcle
      if topic
        h2= topic.title
        = topic.description
      else
        h2 Welcome
        | This is server side JavaScript
    div
      a(href='/topic/new') new  
    
